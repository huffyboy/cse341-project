<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Create New Announcement</h1>
    <a href="/dashboard/announcements" class="btn btn-secondary">Announcements</a>
  </div>
  
  <div class="card">
    <div class="card-body">
      <% if (typeof error !== 'undefined') { %>
        <div class="alert alert-danger" role="alert">
          <%= error %>
        </div>
      <% } %>

      <form action="/dashboard/announcements" method="POST">
        <div class="mb-3">
          <label for="content" class="form-label">Content</label>
          <textarea 
            class="form-control" 
            id="content" 
            name="content" 
            rows="4" 
            required
            placeholder="Enter your announcement content here..."
          ><%= typeof formData !== 'undefined' ? formData.content : '' %></textarea>
        </div>
        
        <div class="mb-3">
          <label for="scheduled_time" class="form-label">Scheduled Time</label>
          <input 
            type="datetime-local" 
            class="form-control" 
            id="scheduled_time" 
            name="scheduled_time" 
            required
            value="<%= typeof formData !== 'undefined' ? formData.scheduled_time : '' %>"
          >
        </div>
        
        <div class="d-flex gap-2">
          <button type="submit" class="btn btn-primary">Create Announcement</button>
          <a href="/dashboard/announcements" class="btn btn-outline-secondary">Cancel</a>
        </div>
      </form>
    </div>
  </div>
</div> 