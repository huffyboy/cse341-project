<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="mb-0">Welcome, <%= user.oauth_providers[0].name %></h3>
                </div>
                <div class="card-body">
                    <% if (!user.account_setup_completed) { %>
                        <div class="alert alert-warning">
                            <h5>Complete Your Account Setup</h5>
                            <p>Please complete your account setup to access all features.</p>
                            <a href="/auth/complete-profile" class="btn btn-warning">Complete Setup</a>
                        </div>
                    <% } %>
                    
                    <div class="mt-4">
                        <h5>Account Information</h5>
                        <ul class="list-group">
                            <li class="list-group-item">Organization: <%= user.org_name %></li>
                            <% if (user.email) { %>
                                <li class="list-group-item">Email: <%= user.email %></li>
                            <% } %>
                            <% if (user.phone) { %>
                                <li class="list-group-item">Phone: <%= user.phone %></li>
                            <% } %>
                            <% if (user.timezone) { %>
                                <li class="list-group-item">Timezone: <%= user.timezone %></li>
                            <% } %>
                            <li class="list-group-item">
                                Connected Accounts:
                                <ul class="list-unstyled ms-3 mt-2">
                                    <% user.oauth_providers.forEach(provider => { %>
                                        <li>
                                            <i class="bi bi-<%= provider.provider %>"></i>
                                            <%= provider.provider.charAt(0).toUpperCase() + provider.provider.slice(1) %>
                                            <% if (provider.name) { %>
                                                (<%= provider.name %>)
                                            <% } %>
                                        </li>
                                    <% }); %>
                                </ul>
                            </li>
                        </ul>
                    </div>

                    <div class="mt-4">
                        <h5>Quick Links</h5>
                        <div class="d-grid gap-2">
                            <a href="/dashboard/announcements" class="btn btn-primary">Manage Announcements</a>
                            <a href="/auth/complete-profile" class="btn btn-outline-secondary">Edit Profile</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 