<div class="container mt-4">
  <div class="row">
    <!-- Stats Cards -->
    <div class="col-md-4 mb-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Total Announcements</h5>
          <h2 class="card-text"><%= stats.totalAnnouncements %></h2>
        </div>
      </div>
    </div>
    <div class="col-md-4 mb-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Pending Announcements</h5>
          <h2 class="card-text"><%= stats.pendingAnnouncements %></h2>
        </div>
      </div>
    </div>
    <div class="col-md-4 mb-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Sent Announcements</h5>
          <h2 class="card-text"><%= stats.sentAnnouncements %></h2>
        </div>
      </div>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Quick Actions</h5>
          <div class="d-flex gap-2">
            <a href="/dashboard/announcements/create" class="btn btn-primary">Create New Announcement</a>
            <a href="/dashboard/announcements" class="btn btn-outline-primary">View All Announcements</a>
            <a href="/auth/profile" class="btn btn-outline-secondary">Edit Profile</a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Recent Announcements -->
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="card-title mb-0">Recent Announcements</h5>
            <a href="/dashboard/announcements" class="btn btn-sm btn-outline-primary">View All</a>
          </div>
          <% if (recentAnnouncements && recentAnnouncements.length > 0) { %>
            <div class="table-responsive">
              <table class="table">
                <thead>
                  <tr>
                    <th>Content</th>
                    <th>Scheduled Time</th>
                    <th>Status</th>
                  </tr>
                </thead>
                <tbody>
                  <% recentAnnouncements.forEach(announcement => { %>
                    <tr>
                      <td><%= announcement.content %></td>
                      <td><%= new Date(announcement.scheduled_time).toLocaleString(undefined, {year: 'numeric', month: 'numeric', day: 'numeric', hour: '2-digit', minute: '2-digit'}) %></td>
                      <td>
                        <% if (announcement.is_sent) { %>
                          <span class="badge bg-success">Sent</span>
                        <% } else { %>
                          <span class="badge bg-warning">Pending</span>
                        <% } %>
                      </td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          <% } else { %>
            <p class="text-muted">No recent announcements</p>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div> 